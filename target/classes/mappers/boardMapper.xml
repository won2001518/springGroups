<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS.dao.BoardDAO">

	<select id="getBoardList" resultType="com.spring.springGroupS.vo.BoardVO">
		select *,
		  timestampdiff(hour, wDate, now()) as hour_diff,
		  datediff(now(), wDate) as date_diff
		  from board2 b
		  <if test="search != null and search != ''"> where ${search} like concat('%',#{searchString},'%')</if>
		  <!-- <if test="@test.com.MybatisCheck@notEmpty(search)"> where ${search} like concat('%',#{searchString},'%')</if> -->
		  order by idx desc limit #{startIndexNo},#{pageSize};
	</select>
	
	<select id="getTotRecCnt" resultType="int">
	  select count(*) from <if test="search != ''"> where ${search} like concat('%',#{searchString},'%')</if> board2;
	</select>
	
	<select id="getBoardContent" resultType="com.spring.springGroupS.vo.BoardVO">
		select * from board2 where idx = #{idx};
	</select>
	
	<!--  <![CDATA[조건식....]]   -->
	<select id="getPreNextSearch" resultType="com.spring.springGroupS.vo.BoardVO">
	  <if test="str == 'preVO'">
		  select idx,title from board2 where <![CDATA[idx < #{idx}]]>  order by idx desc limit 1;
		</if>
	  <if test="str != 'preVO'">
		  select idx,title from board2 where <![CDATA[idx > #{idx}]]> order by idx limit 1;
		</if>
	</select>
	
	
	
	
	<insert id="setBoardInput">
	  insert into board2 values (default,#{vo.mid},#{vo.nickName},#{vo.title},#{vo.content},#{vo.hostIp},#{vo.openSw},default,default,default,default);
	</insert>
	
	
	
	
	
	<update id="setReadNumPlus">
	  update board2 set readNum = readNum + 1 where idx = #{idx};
	</update>
	
	<update id="setGoodReadNumPlus">
	  update board2 set good = good + 1 where idx = #{idx};
	</update>
	
	<update id="setBoardUpdate">
	  update board2 set title=#{vo.title},content=#{vo.content},hostIp=#{vo.hostIp},openSw=#{vo.openSw},wDate=now() where idx=#{vo.idx};
	</update>
	
	

</mapper>