<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS.dao.PdsDAO">

	<select id="getTotRecCnt" resultType="int">
	  select count(*) from pds2 <if test='part != ""'> where part = #{part} </if> 
	</select>
		
	<select id="getPdsList" resultType="com.spring.springGroupS.vo.PdsVO">
	  select * from pds2 <if test='part != ""'> where part = #{part} </if> order by idx desc limit #{startIndexNo},#{pageSize};
	</select>	

</mapper>