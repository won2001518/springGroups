<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.springGroupS.dao.PdsDAO">

	<select id="getTotRecCnt" resultType="int">
	  select count(*) from pds2 <if test='part != ""'> where part = #{part} </if> 
	</select>
		
	<select id="getPdsList" resultType="com.spring.springGroupS.vo.PdsVO">
	  select * from pds2 <if test='part != ""'> where part = #{part} </if> order by idx desc limit #{startIndexNo},#{pageSize};
	</select>	

	<select id="getPdsContent" resultType="com.spring.springGroupS.vo.PdsVO">
	  select * from pds2 where idx = #{idx};
	</select>	
	
	
	
	<insert id="setPdsInput">
	  insert into pds2 values (default,#{vo.mid},#{vo.nickName},#{vo.fName},#{vo.fSName},#{vo.fSize},#{vo.part},#{vo.title},#{vo.content},#{vo.openSw},#{vo.hostIp},default,default);
	</insert>


	<update id="setPdsDownNumCheck">
		update pds2 set downNum + 1 where idx =#{idx}
	</update>
	
	
	
	
	<delete id="setPdsDeleteCheck">
		delete from pds2 where idx =#{idx};
	</delete>
	
	
	
	
	
	
	
	
	
</mapper>